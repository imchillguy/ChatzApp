<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatzApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.ChatzApp" parent="Base.Theme.ChatzApp"/>
    
    <style name="Theme.ChatzApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/chatz_splash</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.ChatzApp</item>
    </style>


    <style name="FloatingHintTextInputTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    
    <style name="CircularImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>